<!-- sections/nine15--slider -->

{% render 'master--slider' %}
{% if section.settings.hide_menus == true %}
  <style>
    .template--index #MainContent > *:nth-child(n + 2) {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      z-index: 1000;
    }
    .template--index #MainContent > *:nth-child(n + 2) .gradient {
      background: transparent;
    }
    .header__icon--menu .icon,
    .section-header .header__cart__mobile,
    .section-header .header__inline-menu {
      display: none !important;
    }
    .section-header .header__cart {
      display: none;
    }
    .section-header .header__inline-menu {
      display: none;
    }
    {% if section.settings.show_nav != true %}
      .shopify-section-group-header-group {
        position: fixed;
        z-index: 10000;
        width: 100%;
      }
      .header__menu-item,
      .header__cart,
      .header__heading-logo,
      header-drawer .cart_mobile,
      .header__icon > span > svg
      {
        filter: invert(1);
      }

      .gradient {
        background: transparent;
        border: none;
      }

      /*.shopify-section-group-header-group,*/
      .shopify-section-group-footer-group {
        display: none;
      }
      /* cart */
      .section-header .header__cart {
        display: none;
      }
      /* desktop menu */
      .section-header .header__inline-menu {
        display: none;
      }
      .section-header .header-wrapper--border-bottom {
        border-bottom: none;
      }
    {% endif %}
  </style>
