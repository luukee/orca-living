  .section-header .header__inline-menu {
    display: block !important;
  }
}
@media only screen and (min-width: 990px) {
  .section-header .header__inline-menu {
    justify-self: end;
  }
} */
.section-header .header__inline-menu .list-menu {
  display: block !important;
}
.section-header .header__inline-menu .list-menu .menu-item__name-cart {
  display: none;
}
.section-header .header__inline-menu .list-menu :nth-last-child(2) {
  display: initial;
}
@media only screen and (max-width: 749px) {
  .section-header .header__inline-menu .list-menu .menu-item__name-cart {
    display: initial;
  }
  .section-header .header__inline-menu .list-menu :nth-last-child(2) {
    display: none;
  }
}
.section-header .header__inline-menu .list-menu .header__menu-item {
  padding: 1px 0;
}
.section-header
  .header__inline-menu
  .list-menu
  .header__menu-item
  .header__active-menu-item:not(:hover) {
  text-decoration: none;
}
.section-header
  .header__inline-menu
  .list-menu
  .header__menu-item
  .header__active-menu-item:before {
  content: '_';
}
@media only screen and (max-width: 749px) {
  .section-header .header__inline-menu .list-menu {
    display: grid !important;
    -moz-column-gap: 20px;
    column-gap: 20px;
    row-gap: 5px;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(3, 1fr);
    grid-auto-flow: column;
  }
}
@media only screen and (min-width: 750px) {
  .section-header .header__inline-menu .list-menu {
    columns: 2;
    column-gap: var(--columns--gap);
  }
}
.section-header .header-wrapper--border-bottom {
  border-bottom: 1px solid #000;
}
</style>