<div
  class="out-of-stock"
  {% if product.selected_or_first_available_variant.available == true %}
  style="display: none;"
  {% endif %}>
  {% form 'contact' %}
    <div class="waitlist-form">
      <h5>Join Waitlist</h5>
      <div>
        <div class="input_wrapper">
          <input
            id="k_id_variant_id"
            type="text"
            style="display: none;"
            name="contact[body]"
            value="{{product.title}} - {{product.selected_or_first_available_variant.title}}">
          <span class="visually-hidden label-hidden" for="k_id_email_footer">BackInStock Sign Up</span>
          <input
            type="email"
            name="contact[email]"
            id="k_id_email_footer"
            placeholder="Email Address">
          <button type="submit">
            {% render 'icon-caret' %}
          </button>
        </div>
        <div class="klaviyo_messages">
          {% if form.posted_successfully? %}
            <div class="success_message form-message form-message--success">
              Thank you. We'll let you know when it's back in stock.
            </div>
          {% endif %}
          {% if form.errors %}
            <div class="error_message form-message form-message--error">
              We're Sorry! Something went wrong!
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endform %}
</div>