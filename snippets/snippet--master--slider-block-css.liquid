<!-- snippets/snippet--master--slider-block-css -->
{% comment %}
  Snippet: Slider Block CSS Generator
  Purpose: Generates dynamic CSS for slider slides
  Parameters: All slide-specific variables
{% endcomment %}

/* Slide Defaults */
{{slide_class}} {
	position: relative;
	overflow: hidden;
	z-index: 1;
	vertical-align: bottom;
}

/* Overlay */
{{slide_class}} .overlay {
	background: {{bg_color}};
	display: block;
	position: absolute;
	top:0;
	left:0;
	width: 100%;
	height: 100%;
	z-index: 1;
}
{% if op_mob != '0' %}
	{% if mobile_overlay_at_tablet %}/medium-down/{% else %}/small/{% endif %} {
		{{slide_class}} .overlay {
			background: {{bg_color_mob}};
		}
	}
{% endif %}

/* Content Position */
{{slide_class}} .slide-text-content {
	position: absolute;
	text-align: {{section_text_align}};
	max-width: {{txt_wdth}};
	margin: 0 auto;
	width:95%;
	z-index: 2;
	{{alignment}}
	font-family: var(--font-heading-family);
}
{% if full_width %}
	.full-width .slide-text-content {
		width: 100%;
		padding-left: calc(var(--grid-gutter) * 0.5);
		padding-right: calc(var(--grid-gutter) * 0.5);
	}
{% endif %}
{{slide_class}} .but-div {
	display: flex;
	gap: 2em;
	flex-direction: row;
	width: unset;
	justify-content: {% if text_align == 'right' %}flex-end;{% elsif text_align == 'center' %}center;{% else %}flex-start;{% endif %};
}

{% if mobile_overlay_at_tablet %}/medium-down/{% else %}/small/{% endif %} {

	{{slide_class}} .slide-text-content {
		width: 100%;
		{% if mobile_content_relative == true %}
			position: relative;
			top: initial;
			left: initial;
			right: initial;
			bottom: initial;
			transform: none;
			padding: 2em 0;
			margin: 0 auto;
		{% else %}
			{{alignment}}

		{% endif %}
	}

	{% if mobile_content_relative == true %}
	{{slide_class}} .page-width {
		position: relative;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		transform: none;
		margin: 0 auto;
	}
	{% endif %}
}

/* Text Sizing */
{{slide_class}} .icon-star {
  display: inline-block;
  width: 15px;
  height: 15px;
  margin-right: 2px;
  color: var(--color--candlelight-yellow);
}
{{slide_class}} .h2,
{{slide_class}} h2 {
	margin-top: 0;
	margin-bottom: 0;
	font-size: {{ttl_sze}}px;
	font-weight: 500;
	color: {{ttl_clr}};
	{% if title_font_mono == true %}
		font-family: var(--font-heading-family);
	{% else %}
		font-family: var(--font-body-family);
	{% endif %}
}
{{slide_class}} h3 {
	margin-top: 0;
	margin-bottom: 0;
	font-size: {{sub_ttl_sze}}px;
	font-weight: 500;
	color: {{sub_ttl_clr}};
	line-height: 1.1;
	font-style: italic;
	{% if subtitle_font_mono == true %}
		font-family: var(--font-heading-family);
	{% else %}
		font-family: var(--font-body-family);
	{% endif %}
}
{{slide_class}} .rte {
	margin-top: 0;
	margin-bottom: 0;
	/*font-family: var(--font-heading-family);*/
	
}
{{slide_class}} .rte,
{{slide_class}} .rte * {
	font-size: {{txt_sze}}px;
	color: {{txt_clr}};
}
{{slide_class}} .btn {
	<!-- font-size: 17px; -->
}
{{slide_class}} .slide-text-content .rte > * {
	margin: 0;
}
{{slide_class}} .slide-text-content .rte > *:not(:last-child),
{{slide_class}} .slide-text-content > *:not(:last-child) {
	margin-bottom: var(--base-gutter--half);
}
== .btn-container {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
	width: calc(100% + var(--base-gutter));
	margin-bottom: calc(var(--base-gutter) * -1) !important;
	margin-left: calc(var(--base-gutter) * -1) !important;
}

== .btn-container .button {
	margin-bottom:  var(--base-gutter);
	margin-left:  var(--base-gutter);
}
== .btn-container .button:not(:only-child) {
	flex: 1 1;
	min-width: 150px;
	max-width: 300px;
}

{% if btn1_style contains 'custom' %}
	{{slide_class}} .btn {
		background: {{color_button|default:'rgba(0,0,0,0)'}} ;
		border-color: {{color_button_border|default:'rgba(0,0,0,0)'}} ;
		color: {{color_button_text|default:'rgba(0,0,0,0)'}} ;
		font-size: {{btn_txt_sze}}px;
	}
	{{slide_class}} .btn:hover {
		background: {{color_button_hover|default:'rgba(0,0,0,0)'}} ;
		border-color: {{color_button_border_hover|default:'rgba(0,0,0,0)'}} ;
		color: {{color_button_text_hover|default:'rgba(0,0,0,0)'}} ;
	}
	{{slide_class}} .underlined-link::after {
		background: {{color_button_border|default:'rgba(0,0,0,0)'}} ;
	}
	@media only screen and (min-width: 750px) {
		.rich-text:not(.rich-text--full-width) .rich-text__wrapper {
			width: calc(100% - 21rem / var(--font-body-scale));
		}
	}
	.template--index #MainContent>*:not(#shopify-section-template--15281807065206__custom_liquid_jzJyUM):nth-child(2) {
		bottom: 45vh !important;
	}
	.rich-text__buttons {
	gap: 2em;
	}
	.rich-text__heading,
	.button {
		color: #fff;
	}
	.button {
		font-size: 2rem;
		background-color: transparent;
		padding: 0;
		justify-content: {% if text_align == 'right' %}flex-end;{% elsif text_align == 'center' %}center;{% else %}flex-start;{% endif %};
		flex-grow: 0;
		min-width: unset;
		min-height: 1.5em
	}
	.button::before,
	.button::after {
		box-shadow: none;
	}
	{% comment %}
	.button::after {
	content: "";
	border-bottom: 1px solid #fff !important;
	}
	{% endcomment %}
	.button:not([disabled]):hover::after {
	box-shadow: none;
	border-bottom-width: 2px !important;
	}
	#shopify-section-template--15267871654006__custom_liquid_jzJyUM {
		top: 60vh;
	}
{% endif %}
{% if btn1_style contains 'custom' and btn_custom_inline != false %}
	.but-div {
		display: inline-flex;
		flex-direction: row;
		gap: 2em;
	}
	{{slide_class}} .btn {
		background-color: transparent;
		padding: 0;
		min-width: unset;
		min-height: 1.5em;
		border-left: none;
		border-right: none;
		border-top: none;
		border-bottom: none;
	}
	{{slide_class}} .btn:after {
		border-bottom: 1px solid {{color_button_border|default:'rgba(0,0,0,0)'}} ;
		box-shadow: none;
	}
	{{slide_class}} .btn:hover:after {
		border-bottom: 2px solid {{color_button_border|default:'rgba(0,0,0,0)'}} ;
		box-shadow: none;
	}
{% endif %}

{% comment %} Mobile Responsive Styles {% endcomment %}
{% if mobile_overlay_at_tablet %}
/medium-down/
{% else %}
/small/
{% endif %} {
		{{slide_class}} .h2,
		{{slide_class}} h2 {
			font-size: 32px;
		}
		{{slide_class}} h3 {
				font-size: 20px;
		}
		{{slide_class}} .rte,
		{{slide_class}} .rte * {
				font-size: 16px;
		}
		{{slide_class}} .btn {
				font-size: 15px;
		}
	{{slide_class}} .slide-text-content .rte > *:not(:last-child),
	{{slide_class}} .slide-text-content > *:not(:last-child) {
			margin-bottom: var(--base-gutter--quarter);
	}
}

/* Image Position */
{{slide_class}} .bg_image,
{{slide_class}} img {
	{{position}}
}
{% if img_mob != blank %}
	{% if mobile_overlay_at_tablet %}/medium-down/{% else %}/small/{% endif %} {
		{{slide_class}} .bg_image,
		{{slide_class}} img {
			{{mob_position}}
		}
	}
{% endif %}

/* Slide Height */
{% if use_background_images == true %}
	{{slide_class}} {
		{{desktop_img_height}}
		{{position}}
	}

	{% if mobile_height != 0 %}
		{% if mobile_overlay_at_tablet %}/medium-down/{% else %}/small/{% endif %} {
				{{slide_class}}  {
						{{mobile_img_height}}
				}
		}
		{% unless mobile_height contains 'vw' %}
		{% endunless %}
	{% endif %}
	{% if mobile_content_relative == true %}
		{% if mobile_overlay_at_tablet %}/medium-down/{% else %}/small/{% endif %} {
			{{slide_class}}  {
				height: auto;
				min-height: 100%;
				{% if mobile_height contains 'vw' %}
				padding-top: 0;
				{% endif %}
			}
			{{slide_class}} .h2,
			{{slide_class}} h2,
			{{slide_class}} h3,
			{{slide_class}} .rte * {
				color: {{ settings_color_primary_body_text }};
			}
		}
	{% endif %}
{% endif %}

